<Page x:Class="DualDolmen.Exercises.Pages.CardsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DualDolmen.Exercises.Pages"
      mc:Ignorable="d" 
	  Background="#6FB8B7"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CardsPage">

    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/> <!-- Под кнопку "Назад"-->
			<RowDefinition/> <!-- Под Uniform Grid-->
		</Grid.RowDefinitions>

		<StackPanel HorizontalAlignment="Left" Grid.Row="0">
			<Button Content="Выход" Width="100" FontSize="20" Margin="10"/>
		</StackPanel>
		
		<!-- Uniform Grid с карточками -->
		<UniformGrid Grid.Row="1" x:Name="CardGrid" Rows="3" Columns="2" Margin="20" />
	</Grid>
</Page>
