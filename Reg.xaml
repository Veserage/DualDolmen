<Page x:Class="DualDolmen.Reg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700"
      Title="Reg">

    <!-- Ресурсы стилей -->
    <Page.Resources>
        <!-- Стиль для TextBox с плейсхолдером -->
        <Style x:Key="PlaceholderTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#E0E2D4"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#FF999999"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для PasswordBox с плейсхолдером -->
        <Style x:Key="PlaceholderPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Background" Value="#E0E2D4"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#FF999999"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Новый стиль для кнопки -->
        <Style x:Key="RoundButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#06657B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="250"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                CornerRadius="25"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- Светлый градиентный фон -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#79f39b" Offset="0"/>
                <GradientStop Color="#6FB8B7" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая часть (75%) - форма регистрации -->
        <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="10,0,0,0">
            <!-- Кнопка "Назад" -->
            <TextBlock Text="← Назад"
                       Margin="1,1,0,30"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#000000"
                       Cursor="Hand"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       MouseDown="BackText_MouseDown">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="4" ShadowDepth="2" Opacity="0.1"/>
                </TextBlock.Effect>
            </TextBlock>

            <!-- Заголовок -->
            <TextBlock Text="Регистрация пользователя"
                       Margin="0,0,0,30"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#000000" Width="400" Height="40"/>

            <!-- Поле для логина -->
            <Grid Margin="0,0,0,25" Width="400">
                <TextBox x:Name="LoginTextBox" 
             FontSize="18"
             Padding="15,12"
             Background="#E0E2D4"
             BorderBrush="#CCCCCC"
             BorderThickness="1"
             Foreground="Black"
             GotFocus="LoginTextBox_GotFocus"
             LostFocus="LoginTextBox_LostFocus"
             TextChanged="LoginTextBox_TextChanged"
             KeyDown="TextBox_KeyDown"/>
                <TextBlock x:Name="LoginPlaceholder" 
               Text="Введите логин"
               Foreground="#FF999999"
               Margin="20,0,0,0"
               VerticalAlignment="Center"
               IsHitTestVisible="False"
               FontSize="18"/>
            </Grid>

            <!-- Поле для пароля -->
            <Grid Margin="0,0,0,25" Width="400">
                <PasswordBox x:Name="PasswordBox" 
                 FontSize="18"
                 Padding="15,12"
                 Background="#E0E2D4"
                 BorderBrush="#CCCCCC"
                 BorderThickness="1"
                 Foreground="Black"
                 GotFocus="PasswordBox_GotFocus"
                 LostFocus="PasswordBox_LostFocus"
                 PasswordChanged="PasswordBox_PasswordChanged"
                 KeyDown="PasswordBox_KeyDown"/>
                <TextBlock x:Name="PasswordPlaceholder" 
               Text="Введите пароль"
               Foreground="#FF999999"
               Margin="20,0,0,0"
               VerticalAlignment="Center"
               IsHitTestVisible="False"
               FontSize="18"/>
            </Grid>

            <!-- Поле для повторного ввода пароля -->
            <Grid Margin="0,0,0,20" Width="400">
                <PasswordBox x:Name="RepeatPasswordBox" 
                 FontSize="18"
                 Padding="15,12"
                 Background="#E0E2D4"
                 BorderBrush="#CCCCCC"
                 BorderThickness="1"
                 Foreground="Black"
                 GotFocus="RepeatPasswordBox_GotFocus"
                 LostFocus="RepeatPasswordBox_LostFocus"
                 PasswordChanged="RepeatPasswordBox_PasswordChanged"
                 KeyDown="PasswordBox_KeyDown"/>
                <TextBlock x:Name="RepeatPasswordPlaceholder" 
               Text="Повторите пароль"
               Foreground="#FF999999"
               Margin="20,0,0,0"
               VerticalAlignment="Center"
               IsHitTestVisible="False"
               FontSize="18"/>
            </Grid>

            <!-- Кнопка регистрации с новым стилем -->
            <Button Content="Зарегистрироваться"
                    Style="{StaticResource RoundButtonStyle}"
                    Click="RegisterButton_Click"/>
        </StackPanel>

        <!-- Правая часть (25%) - изображение -->
        <Image Grid.Column="1" 
               x:Name="RightImage"
               Stretch="UniformToFill"
               Source="/Images/books.png"/>
    </Grid>
</Page>